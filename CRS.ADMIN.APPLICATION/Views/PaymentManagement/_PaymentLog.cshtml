@functions {
    string GetClubCategoryClassName(string clubCategory)
    {
        switch (clubCategory)
        {
            case "Platinum":
                return "platinum";
            case "Gold":
                return "gold";
            case "Silver":
                return "silver";
            default:
                return string.Empty;
        }
    }
}

