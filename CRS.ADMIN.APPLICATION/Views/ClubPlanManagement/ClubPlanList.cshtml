                    </thead>
                    <tbody>
                        @{
                            int SN = 1;
                            foreach (var item in Model.planList)
                            {
                                <tr class="bg-white border-b ">
                                    <td class="p-[12px]">
                                        @SN
                                    </td>

                                    <td class="p-[12px]">
                                        @item.PlanName
                                    </td>

                                    @*<td class="p-[12px]">
                                        @item.LastOrderTime
                                    </td>*@
                                    <td class="p-[12px]">
                                        @item.LastEntryTime
                                    </td>
                                    <td class="p-[12px]">
                                        @item.NoofPeople
                                    </td>
                                    <td class="p-[12px]">
                                        <div class="w-max">
                                            @item.Status
                                        </div>
                                    </td>
                                    <td class="p-[12px]">
                                        <div class="w-max">
                                            @item.CreatedDate
                                        </div>
                                    </td>
                                    <td class="p-[12px]">
                                        <div class="w-max">
                                            @item.UpdatedDate
                                        </div>
                                    </td>
                                    <td class="p-[12px]">
                                        <div class="flex gap-[7px]">
                                            <i class="las la-edit text-[20px] cursor-pointer text-[#A6A6A6]" onclick="ManageClubPlanFunction('@Model.ClubId','@item.Id');"></i>
                                            @if (item.Status.Trim().ToUpper() == "A")
                                            {
                                                <div onclick="BlockFunction('@Model.ClubId','@item.Id')">
                                                    <i class="fa-solid fa-lock text-primary-100 cursor-pointer"></i>
                                                </div>

                                                @*<i class="las la-trash-alt text-[20px] cursor-pointer text-[#CB3F3F]" title="Block Club Plan" onclick="BlockFunction('@Model.ClubId','@item.Id')"></i>*@

                                            }
                                            else
                                            {
                                                <div onclick="UnBlockFunction('@Model.ClubId','@item.Id')">
                                                    <i class="fa-solid fa-unlock text-primary-100 cursor-pointer"></i>
                                                </div>
                                                @*<i class="las la-unlock cursor-pointer text-[#697DBF] text-[18px]" title="Unblock Club Plan" onclick="UnBlockFunction('@Model.ClubId','@item.Id')"></i>*@

                                            }


                                        </div>
                                    </td>
                                </tr>
                                SN++;
                            }
                        }
                    </tbody>
                </table>

            </div>
            <div class="pagination-club">
                <div class="show-entry" id="Entries-Id">
                </div>
                <div class="flex gap-[12px]">
                    <div class="btn btn-secondary-box-shadow" id="prev-btn">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.Previous
                    </div>
                    <div class="flex gap-[12px]" id="pagination-id">
                    </div>
                    <div class="btn btn-secondary-box-shadow" id="next-btn">
                        @CRS.ADMIN.APPLICATION.Resources.Resource.Next
                    </div>
                </div>
            </div>
