                    </div>
                    <div class="btn btn-secondary-box-shadow ">@CRS.ADMIN.APPLICATION.Resources.Resource.Next</div>
                </div>
            </div>*@
    </div>
</div>
@section scripts{
    <script>
        function DeleteRequest(recommendationid, clubid, hostid, recommendationhostid) {
            $.ajax({
                type: 'POST',
                async: true,
                url: "/RecommendationManagementV2/DeleteSelectedHost?recommendationid=" + recommendationid + "&clubid=" + clubid + "&hostid=" + hostid + "&recommendationhostid=" + recommendationhostid,
                dataType: 'json',
                data: {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                },
                success: function (responseData) {
                    window.location.reload();
                },
                error: function (ex) {

                }
            });
        }
    </script>
}

