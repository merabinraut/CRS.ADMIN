@section scripts{
    <script>
        function addQueryParam2(url, paramName, paramValue, paramName2, paramValue2) {
            // Add the first query parameter
            if (paramValue != null && paramValue != "") {
                // Check if it's the first parameter, if so, use "?" else use "&"
                url += url.includes('?') ? `&${paramName}=${paramValue}` : `?${paramName}=${paramValue}`;
            }

            // Add the second query parameter
            if (paramValue2 != null && paramValue2 != "") {
                url += url.includes('?') ? `&${paramName2}=${paramValue2}` : `?${paramName2}=${paramValue2}`;
            }

            return url;
        }
        document.addEventListener('DOMContentLoaded', function () {
        const page_size = @ViewBag.PageSize;
        const total_data = @ViewBag.TotalData;
        const start_index_val = @ViewBag.StartIndex;
        let URL = "/RecommendationManagementV2/ClubListForSearchPageView" ;
        let search_filter = $('#default-search').val();
        URL = addQueryParam(URL, 'locationid', '@ViewBag.LocationId', 'SearchFilter', search_filter);
        LoadPagination(page_size, total_data, start_index_val, URL);

        });
        function ManageHomePageRequest() {
            window.location.href = "/RecommendationManagementV2/ManageSearchPageRequest?locationid=" + '@ViewBag.LocationId';
        }
        function DeleteRequest(recommendationid, displayid, clubid) {
            $.ajax({
                type: 'POST',
                async: true,
                url: "/RecommendationManagementV2/DeleteSearchPageRequest?recommendationid=" + recommendationid + "&displayid=" + displayid + "&clubid=" + clubid + "&locationid=" + '@ViewBag.LocationId',
                dataType: 'json',
                data: {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                },
                success: function (responseData) {
                    window.location.reload();
                },
                error: function (ex) {

                }
            });
        }

        function exportCSVExcel() {
            const currentDateTimeString = new Date().toISOString().replace('T', ' ').replace(/\.\d{3}Z$/, '');
            $('#table-id').table2excel({
                exclude: ".no-export",
                filename: currentDateTimeString + "_hoslog_searchpage.xls",
                fileext: ".xls",
                exclude_img: false,
                exclude_links: true,
                exclude_inputs: true
            });
        }
    </script>
}

