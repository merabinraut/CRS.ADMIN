@model CRS.ADMIN.APPLICATION.Models.Home.LoginRequestModel
@{
    ViewBag.Title = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hoslog | Admin | @ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/assets_new/css/superadmin/global.css">
    <link rel="stylesheet" href="~/Content/assets_new/css/superadmin/layout.css">
    <link rel="stylesheet" href="~/Content/assets_new/css/superadmin/custom.css">
    <link rel="stylesheet" href="~/Content/assets_new/css/superadmin/form.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.css" />
    <link rel="stylesheet"
          href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet"
          href="https://maxst.icons8.com/vue-static/landings/line-awesome/font-awesome-line-awesome/css/all.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.css" rel="stylesheet" />
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" /> -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500;1,600;1,700;1,800&display=swap"
          rel="stylesheet">
    <!-- <script src="https://cdn.tailwindcss.com"></script> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-css/1.4.6/select2-bootstrap.min.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/css/select2.min.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/js/select2.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/Content/assets_new/js/NotificationMessageToaster.js"></script>
</head>

<body class="select-checkbox-custom">
    <div class="flex h-screen overflow-hidden w-full">
        <div class="w-1/2  h-screen  hidden md:block">
            <img src="~/Content/assets_new/images/affiliate-login.png" alt="img" class="h-full w-full object-fill">

        </div>
        <div class=" w-full md:w-1/2 h-screen  flex justify-center items-start md:items-center">

            <div class="flex justify-center items-center w-full md:w-[512px] py-8 px-5 rounded-[8px] md:shadow md:shadow-[0px 1px 3px 0px rgba(0, 0, 0, 0.30)]">
                <div class="w-[328px] flex flex-col">
                    <div class="flex justify-center  p-[10px]">
                        <img src="~/Content/assets_new/images/logo.svg" alt=""
                             class="h-[46px] w-[149px] mb-[26px] text-center">
                    </div>
                    <div class="mb-[26px] flex flex-col gap-1">
                        <div class="text-[#D75A8B] text-base font-bold leading-[16px] ">
                            @CRS.ADMIN.APPLICATION.Resources.Resource.LoginMessage
                        </div>
                        <div class="text-[#525F70] text-xs font-[400]">
                            @CRS.ADMIN.APPLICATION.Resources.Resource.Enter_your_credentials_to_continue_
                        </div>
                    </div>
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @role = "form", @id = "Form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="flex flex-col gap-6 ">
                            <div class="input-field-common w-full">
                                <label class="block mb-[10px] text-sm font-bold text-[#535353] uppercase">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.Username <span class="text-[#D32F2F] pl-1">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.Username, new { @class = "w-full", @style = "height:40px !important", @placeholder = @CRS.ADMIN.APPLICATION.Resources.Resource.Username, @maxlength = "30" })
                                <span class="validationMessage">
                                    @Html.ValidationMessageFor(m => m.Username)
                                </span>
                            </div>
                            <!-- for password  -->
                            <div class="input-field-common w-full ">
                                <label class="block mb-[10px] text-sm font-bold text-[#535353]  uppercase">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.Password <span class="text-[#D32F2F] pl-1">*</span>
                                </label>
                                <div class="password-input">
                                    @Html.TextBoxFor(model => model.Password, new { @class = "w-full", @type = "password", @style = "height:40px !important", @placeholder = @CRS.ADMIN.APPLICATION.Resources.Resource.Password, @maxlength = "16" })
                                    <i class="las la-eye text-[#666666] password-eye " style="color:#666666"
                                       onclick="togglePassword()"></i>
                                </div>
                                <span class="validationMessage">
                                    @Html.ValidationMessageFor(m => m.Password)
                                </span>
                            </div>
                            <!-- for password 3end  -->
                        </div>
                        <div class="flex justify-between items-center mb-[24px] mt-[16px]">
                            <div class="flex items-center checkbox-common py-[8px]">
                                <input id="default-checkbox" name="RememberMe" type="checkbox" value=""
                                       class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded-[2px]  ">
                                <label for="default-checkbox" class="ml-2 text-sm font-medium text-[#151B2C] ">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.Remember_me
                                </label>
                            </div>

                        </div>
                        <a class="w-full">
                            <button class="btn btn-primary-default w-full  rounded-[4px] md:rounded-[8px] px-4 py-[10px] text-sm font-semibold h-[40px]">
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Login
                            </button>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
        function togglePassword() {
            const passwordInput = document.querySelector('.password-input input');
            const eyeIcon = document.querySelector('.password-eye');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('la-eye');
                eyeIcon.classList.add('la-eye-slash');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.remove('la-eye-slash');
                eyeIcon.classList.add('la-eye');
            }
        }
    </script>
    <script>
        $(document).ready(function () {
            $('select').select2({
                minimumResultsForSearch: Infinity
            });
        });
        $('#default-checkbox').click(function () {
            var myCheckbox = document.getElementById("default-checkbox");
            if (myCheckbox.checked) $('#default-checkbox').val(true);
            else $('#default-checkbox').val(false);
        });
    </script>
    <script src="~/Content/assets_new/js/tabs.js"></script>
    <script src="~/Content/assets_new/js/jquery.validate.min.js "></script>
    <script src="~/Content/assets_new/js/additional-methods.min.js "></script>
    <script src="~/Content/assets_new/js/jquery.steps.min.js "></script>
    <script src="~/Content/assets_new/js/main.js "></script>
    <script src="~/Content/assets_new/js/filter.js "></script>
    <script src="~/Content/assets_new/js/image-upload.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"
            integrity="sha512-uKQ39gEGiyUJl4AI6L+ekBdGKpGw4xJ55+xyJG7YFlJokPNYegn9KwQ3P8A7aFQAUtUsAQHep+d/lrGqrbPIDQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/Content/validation.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
    //For toaster Notification
    $(function () {
    {
        @if (TempData["Notifications"] != null)
        {
            var messages = (List<CRS.ADMIN.SHARED.NotificationModel>)TempData["Notifications"];
            foreach (var note in messages)
            {
                <text>showNotification("@note.Message", "@note.Title", "@note.NotificationType");</text>
            }
        }
        @{
            ViewBag.Notifications = string.Empty;
        }
        }
    });
    </script>
</body>
</html>