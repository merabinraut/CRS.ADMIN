@model CRS.ADMIN.APPLICATION.Models.ApiResponseMessage.ApiResponseModel
@{
    ViewBag.Title = "Api Response Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var partialViewModel = new CRS.ADMIN.APPLICATION.Models.ApiResponseMessage.ApiResponseMessageModel();
    var _ManageEdit = Model.ManageResponse as CRS.ADMIN.APPLICATION.Models.ApiResponseMessage.ApiResponseMessageModel;

}
<div class="px-8 py-4">
    @Html.AntiForgeryToken()
    <div>
        <div class="heading-title">
            @CRS.ADMIN.APPLICATION.Resources.Resource.Api_Response_Message_List
        </div>
        <div class="span-title-light-gray">
            @CRS.ADMIN.APPLICATION.Resources.Resource.Manage_API_Responses_
        </div>
    </div>
    <div class="flex justify-between pt-[24px] pb-[24px]">
        <form action="/ApiResponseMessage/ApiResponseMessageList" method="get">
            <div class="relative input-search-wrapper">
                <div class="absolute inset-y-0 left-0 flex items-center pl-[16px] pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
                        <path d="M17.5 18L13.875 14.375M15.8333 9.66667C15.8333 13.3486 12.8486 16.3333 9.16667 16.3333C5.48477 16.3333 2.5 13.3486 2.5 9.66667C2.5 5.98477 5.48477 3 9.16667 3C12.8486 3 15.8333 5.98477 15.8333 9.66667Z"
                              stroke="#667085" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round">
                        </path>
                    </svg>
                </div>
                <input type="search"
                       id="default-search"
                       class="input-search block w-full "
                       placeholder="@CRS.ADMIN.APPLICATION.Resources.Resource.Search"
                       value=""
                       name="SearchFilter">
            </div>
        </form>
        <div class="btn btn-primary gap-[8px] h-[40px]" data-drawer-target="add-new-response-message"
             data-drawer-show="add-new-response-message" data-drawer-placement="right" data-drawer-backdrop="false"
             aria-controls="drawer-disabled-backdrop">
            <img src="~/Content/assets_new/images/plus-circle-solid.svg">
            @CRS.ADMIN.APPLICATION.Resources.Resource.Add_New
        </div>
    </div>
    <div class="table-tab">
        <div class="px-[16px] py-[12px] flex justify-between entry-export-container">
            <div class="flex items-center select-entries" id="ShowEntries-Id">
            </div>
            @*<div class="export-button h-[40px]">
                    <img src="~/Content/assets_new/images/club/download-solid.svg"> @CRS.ADMIN.APPLICATION.Resources.Resource.Export
                </div>*@
        </div>
        <div class="relative overflow-x-auto">
            <table class="w-full  text-left club-table" id="table-id">
                <thead class="club-table-thead">
                    <tr>
                        <th scope="col" class="p-[12px]">
                            <div class="flex w-max">
                                S.N
                                <div class="relative pl-[5px]">
                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                </div>
                            </div>
                        </th>
                        <th scope="col" class="p-[12px]">
                            <div class="flex w-max">
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Code
                                <div class="relative pl-[5px]">
                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                </div>
                            </div>
                        </th>
                        <th scope="col" class="p-[12px]">
                            <div class="flex w-max">
                                @CRS.ADMIN.APPLICATION.Resources.Resource.CategoryType
                                <div class="relative pl-[5px]">
                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                </div>
                            </div>
                        </th>
                        <th scope="col" class="p-[12px]">
                            <div class="flex w-max">
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Message
                                <div class="relative pl-[5px]">
                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                </div>
                            </div>
                        </th>
                        @*<th scope="col" class="p-[12px]">
                                <div class="flex w-max">
                                    Message English
                                    <div class="relative pl-[5px]">
                                        <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                        <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                    </div>
                                </div>
                            </th>
                            <th scope="col" class="p-[12px]">
                                <div class="flex w-max">
                                    Message Type
                                    <div class="relative pl-[5px]">
                                        <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                        <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                    </div>
                                </div>
                            </th>*@
                        <th scope="col" class="p-[12px]">
                            <div class="flex justify-center">
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Action
                                <div class="relative pl-[5px]">
                                    <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                    <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                </div>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var responselist in Model.ApiResponseMessageList)
                    {
                        <tr class="bg-white border-b ">
                            <td class="p-[12px]">
                                @responselist.SNO
                            </td>

                            <td class="p-[12px]">
                                @responselist.Code
                            </td>
                            <td class="p-[12px]">
                                @responselist.Category
                            </td>
                            <td class="p-[12px]">
                                @responselist.Message
                            </td>
                            @*<td class="p-[12px]">
                                    @responselist.MessageEng
                                </td>

                                <td class="p-[12px]">

                                        @responselist.MessageType

                                </td>*@
                            <td class="p-[12px]">
                                <div class="flex gap-[7px] justify-center text-[16px] ">
                                    <button class="edit-api-resp-btn" data-id="@responselist.MessageId"
                                            data-code="@responselist.Code"
                                            data-category="@responselist.Category"
                                            data-message="@responselist.Message"
                                            data-http-status="@responselist.HttpStatusCode"
                                            data-message-eng="@responselist.MessageEng">
                                        @*<i class="fa-regular fa-pen-to-square text-[#989898] cursor-pointer" onclick="editResponseMessage('@responselist.MessageId')"</i>*@
                                        <i class="fa-regular fa-pen-to-square text-[#989898] cursor-pointer"
                                           onclick="return updateApiResponseMessage('@responselist.MessageId','@responselist.Code','@responselist.Category','@responselist.Message','@responselist.HttpStatusCode','@responselist.MessageEng','@responselist.Description')"></i>
                                    </button>

                                    <button class="edit-api-resp-btn" data-id="@responselist.MessageId"
                                            data-code="@responselist.Code"
                                            data-category="@responselist.Category"
                                            data-message="@responselist.Message"
                                            data-http-status="@responselist.HttpStatusCode"
                                            data-message-eng="@responselist.MessageEng">
                                        @*<i class="fa-regular fa-pen-to-square text-[#989898] cursor-pointer" onclick="editResponseMessage('@responselist.MessageId')"</i>*@
                                        <i class="fa-regular fa-solid fa-eye text-[#989898] cursor-pointer"
                                           onclick="return getApiResponseMessage('@responselist.MessageId','@responselist.Code','@responselist.Category','@responselist.Message','@responselist.HttpStatusCode','@responselist.MessageEng','@responselist.Description')"></i>
                                    </button>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    <div class="pagination-club">
        <div class="show-entry" id="Entries-Id">
        </div>
        <div class="flex gap-[12px]">
            <div class="btn btn-secondary-box-shadow" id="prev-btn">
                @CRS.ADMIN.APPLICATION.Resources.Resource.Previous
            </div>
            <div class="flex gap-[12px]" id="pagination-id">
            </div>
            <div class="btn btn-secondary-box-shadow" id="next-btn">
                @CRS.ADMIN.APPLICATION.Resources.Resource.Next
            </div>
        </div>
    </div>
</div>
@Html.Partial("_AddResponseMessage", partialViewModel)
@Html.Partial("_EditResponseMessage", _ManageEdit)
@Html.Partial("_DisplayResponseMessage", _ManageEdit)
@section scripts{
    <script>
    $(document).ready(function () {
        $('select').select2({
            minimumResultsForSearch: Infinity
        })

        $('.edit-api-resp-btn').click(function (e) {
            e.preventDefault();
            var t = $(this);
            var id = t.data("id");
            var code = t.data("code");
            var category = t.data("category");
            var message = t.data("message");
            var message_eng = t.data("message-eng");
            var http_status_code = t.data("http-status");

            $("#edit-id-input").val(id);
            $("#edit-code-input").val(code);
            $("#edit-category-input").val(category);
            $("#edit-message-input").val(message);
            $("#edit-messageeng-input").val(message_eng);
            $("#edit-httpstatuscode-input").val(http_status_code);

            $('#edit-api-response-message').removeClass('translate-x-full');
        });

        var popUpRenderValue = '@ViewBag.PopUpRenderValue';
        if (popUpRenderValue != null && popUpRenderValue != "" && popUpRenderValue == "Manage") {
            var element = document.getElementById('add-new-response-message');
            element.classList.remove('translate-x-full');
        }
        else if (popUpRenderValue != null && popUpRenderValue != "" && popUpRenderValue == "Edit")
        {
            var value = '@_ManageEdit.Category'; // Assuming this variable holds the correct value
            $('#large[name="Category"] option[value="' + value + '"]').prop('selected', true).trigger('change');
            var element = document.getElementById('add-edit-response-message');
            element.classList.remove('translate-x-full');
        }
        else if (popUpRenderValue != null && popUpRenderValue != "" && popUpRenderValue == "Get") {
            var value = '@_ManageEdit.Category'; // Assuming this variable holds the correct value
            $('#large[name="Category"] option[value="' + value + '"]').prop('selected', true).trigger('change');
            var element = document.getElementById('display-get-response-message');
            element.classList.remove('translate-x-full');
        }

    });
        function updateApiResponseMessage(i,j,k,l,m,n,o) {
            window.location.href = '/ApiResponseMessage/UpdateResponseMessage?id=' + i + '&Code=' + j + '&Category=' + k + '&Message=' + l + '&HttpStatusCode=' + m + '&MessageEng=' + n + '&Description=' + o;
        }
        function getApiResponseMessage(i, j, k, l, m, n,o) {
            window.location.href = '/ApiResponseMessage/GetApiResponseMessage?id=' + i + '&Code=' + j + '&Category=' + k + '&Message=' + l + '&HttpStatusCode=' + m + '&MessageEng=' + n + '&Description='+o;
        }
        function CancelFunction() {
            location.reload();
        }

    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
             const page_size = @ViewBag.PageSize;
             const total_data = @ViewBag.TotalData;
             const start_index_val = @ViewBag.StartIndex;
            let URL = "/ApiResponseMessage/ApiResponseMessageList";
             let search_filter = $('#default-search').val();
             URL = addQueryParam(URL, 'SearchFilter', search_filter);
             LoadPagination(page_size, total_data, start_index_val, URL);
        });

    </script>
}