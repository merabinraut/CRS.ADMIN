@section scripts
{
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const page_size = @ViewBag.PageSize;
        const total_data = @ViewBag.TotalData;
        const start_index_val = @ViewBag.StartIndex;
        let URL = "/Inquiries/index";
        let search_filter = $('#default-search').val();
        URL = addQueryParam(URL, 'SearchFilter', search_filter);
        LoadPagination(page_size, total_data, start_index_val, URL);
    });
    </script>


    <script>
    function toggleContent() {
        var content = document.getElementById("long-content");
        var btn = document.querySelector(".see-more-btn");

        if (content.style.maxWidth) {
            content.style.maxWidth = null;
           
        } else {
            content.style.maxWidth = "563px"; // Initial width to show
            content.style.overflow="hidden";
            content.style.textOverflow = "ellipsis";
            content.style.whiteSpace = "nowrap";

        
        }
    }

    // Check if the content width exceeds the threshold and show the button accordingly
    document.addEventListener("DOMContentLoaded", function() {
        var content = document.getElementById("long-content");
        var btn = document.querySelector(".see-more-btn");

        if (content.clientWidth < content.scrollWidth) {
            btn.style.display = "block";
        } else {
            btn.style.display = "none";
        }
    });
    </script>
}

<style>
    .content-container {
        max-width: 500px; /* Initial width to show */
     /*   white-space: nowrap;*/
