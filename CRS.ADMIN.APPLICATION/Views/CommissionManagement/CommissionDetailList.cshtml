@model CRS.ADMIN.APPLICATION.Models.CommissionManagement.CommissionDetailRazorViewModel

@{
    ViewBag.Title = "Commission Management";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var addEditViewModel = Model.ManageCommissionDetailAddEdit;
}

<div class="px-8 py-4 flex flex-col gap-8">
    <div class="flex flex-col gap-8">
        <div class="flex justify-between items-center">
            <div>
                <div class="heading-title">
                    @CRS.ADMIN.APPLICATION.Resources.Resource.Commission_Management
                </div>
                <div class="span-title-light-gray">
                    @CRS.ADMIN.APPLICATION.Resources.Resource.Manage_Commission
                </div>
            </div>
        </div>

        <div class="table-tab">
            <div class="flex justify-between items-center p-[24px] pl-[18px]">

                <div class="text-sm text-[#001118]">
                    @CRS.ADMIN.APPLICATION.Resources.Resource.Category_Name: @ViewBag.CategoryName
                </div>
                <div class="btn btn-primary gap-[8px] h-[40px]" data-drawer-target="add-new-slabs"
                     data-drawer-show="add-new-slabs" data-drawer-placement="right" data-drawer-backdrop="false"
                     aria-controls="drawer-disabled-backdrop">
                    <img src="~/Content/assets_new/images/plus-circle-solid.svg">
                    @CRS.ADMIN.APPLICATION.Resources.Resource.Add_New
                </div>
            </div>

            <div class="relative overflow-x-auto">
                <table class="w-full  text-left club-table">
                    <thead class="club-table-thead">
                        <tr>
                            <th scope="col" class="p-[12px]">
                                <div class="flex w-max">
                                    S.N
                                    <div class="relative pl-[5px]">
                                        <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                        <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                    </div>
                                </div>
                            </th>
                            <th scope="col" class="p-[12px]">
                                <div class="flex w-max">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.From_Amount (¥)
                                    <div class="relative pl-[5px]">
                                        <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                        <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                    </div>
                                </div>
                            </th>
                            <th scope="col" class="p-[12px]">
                                <div class="flex w-max">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.To_Amount (¥)
                                    <div class="relative pl-[5px]">
                                        <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                        <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                    </div>
                                </div>
                            </th>
                            <th scope="col" class="p-[12px]">
                                <div class="flex w-max">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.Commission_Type
                                    <div class="relative pl-[5px]">
                                        <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                        <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                    </div>
                                </div>
                            </th>
                            <th scope="col" class="p-[12px]">
                                <div class="flex w-max">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.Value
                                    <div class="relative pl-[5px]">
                                        <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                        <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                    </div>
                                </div>
                            </th>
                            <th scope="col" class="p-[12px]">
                                <div class="flex w-max">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.Min_Value
                                    <div class="relative pl-[5px]">
                                        <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                        <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                    </div>
                                </div>
                            </th>
                            <th scope="col" class="p-[12px]">
                                <div class="flex w-max">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.Max_Value
                                    <div class="relative pl-[5px]">
                                        <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                        <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                    </div>
                                </div>
                            </th>

                            <th scope="col" class="p-[12px]">
                                <div class="flex justify-center">
                                    @CRS.ADMIN.APPLICATION.Resources.Resource.Action
                                    <div class="relative pl-[5px]">
                                        <i class="fa-solid fa-chevron-up text-[8px] absolute top-[2px] text-[#545659]"></i>
                                        <i class="fa-solid fa-chevron-down text-[8px] absolute top-[8px] let-[5px] text-[#c3b6b9]"></i>
                                    </div>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rowCount = 1;

                            foreach (var item in Model.ManageCommissionDetailGrid)
                            {
                                <tr class="bg-white border-b ">
                                    <td class="p-[12px]">
                                        @rowCount
                                    </td>
                                    <td class="p-[12px]">
                                        <div class="w-max">
                                            @item.FromAmount
                                        </div>
                                    </td>
                                    <td class="p-[12px]">
                                        <div class="w-max">
                                            @item.ToAmount
                                        </div>
                                    </td>
                                    @if (item.CommissionPercentageType.ToLower() == "f")
                                    {
                                        <td class="p-[12px]">
                                            <div class="w-max  plan-platinum gap-2">
                                                <i class="las la-cubes"></i> Flat
                                            </div>
                                        </td>
                                    }
                                    else if (item.CommissionPercentageType.ToLower() == "p")
                                    {
                                        <td class="p-[12px]">
                                            <div class="w-max plan-b  gap-2">
                                                <i class="las la-cube"></i> Percent
                                            </div>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="p-[12px]">
                                            <div class="w-max plan-b  gap-2">
                                                <i class="las la-cube"></i>
                                            </div>
                                        </td>
                                    }

                                    <td class="p-[12px]">
                                        <div class="w-max">
                                            @item.CommissionValue
                                        </div>
                                    </td>
                                    <td class="p-[12px]">
                                        <div class="w-max">
                                            @item.MinCommissionValue
                                        </div>
                                    </td>
                                    <td class="p-[12px]">
                                        <div class="w-max">
                                            @item.MaxCommissionValue
                                        </div>
                                    </td>
                                    <td class="p-[12px]">
                                        <div class="flex gap-[7px] justify-center text-[16px] ">
                                            <div onclick="ManageCommissionDetail('@item.CategoryDetailId', '@item.CategoryId', '@item.CategoryName','@item.AdminCommissionTypeId')">
                                                <svg class="svg-inline--fa fa-pen-to-square text-[#989898] cursor-pointer"
                                                     aria-hidden="true" focusable="false" data-prefix="far"
                                                     data-icon="pen-to-square" role="img" xmlns="http://www.w3.org/2000/svg"
                                                     viewBox="0 0 512 512" data-fa-i2svg="">
                                                    <path fill="currentColor"
                                                          d="M441 58.9L453.1 71c9.4 9.4 9.4 24.6 0 33.9L424 134.1 377.9 88 407 58.9c9.4-9.4 24.6-9.4 33.9 0zM209.8 256.2L344 121.9 390.1 168 255.8 302.2c-2.9 2.9-6.5 5-10.4 6.1l-58.5 16.7 16.7-58.5c1.1-3.9 3.2-7.5 6.1-10.4zM373.1 25L175.8 222.2c-8.7 8.7-15 19.4-18.3 31.1l-28.6 100c-2.4 8.4-.1 17.4 6.1 23.6s15.2 8.5 23.6 6.1l100-28.6c11.8-3.4 22.5-9.7 31.1-18.3L487 138.9c28.1-28.1 28.1-73.7 0-101.8L474.9 25C446.8-3.1 401.2-3.1 373.1 25zM88 64C39.4 64 0 103.4 0 152V424c0 48.6 39.4 88 88 88H360c48.6 0 88-39.4 88-88V312c0-13.3-10.7-24-24-24s-24 10.7-24 24V424c0 22.1-17.9 40-40 40H88c-22.1 0-40-17.9-40-40V152c0-22.1 17.9-40 40-40H200c13.3 0 24-10.7 24-24s-10.7-24-24-24H88z">
                                                    </path>
                                                </svg>
                                            </div>
                                            <div onclick="handleCommissionDelete('@item.CategoryId','@item.CategoryDetailId','@ViewBag.CategoryName', '@item.AdminCommissionTypeId')">
                                                <svg class="svg-inline--fa fa-trash-can text-primary-100 cursor-pointer"
                                                     aria-hidden="true" focusable="false" data-prefix="fas" data-icon="trash-can"
                                                     role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"
                                                     data-fa-i2svg="">
                                                    <path fill="currentColor"
                                                          d="M135.2 17.7C140.6 6.8 151.7 0 163.8 0H284.2c12.1 0 23.2 6.8 28.6 17.7L320 32h96c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 96 0 81.7 0 64S14.3 32 32 32h96l7.2-14.3zM32 128H416V448c0 35.3-28.7 64-64 64H96c-35.3 0-64-28.7-64-64V128zm96 64c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16z">
                                                    </path>
                                                </svg>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                rowCount++;
                            }

                        }

                    </tbody>
                </table>

            </div>

        </div>
    </div>
    <!-- tab end  -->
</div>
@Html.Partial("_ManageCommissionDetail", addEditViewModel)
<script>

  $(document).ready(function () {
    var PopUpRenderValue = '@ViewBag.PopUpRenderValue';
        if (PopUpRenderValue != null && PopUpRenderValue != "" && PopUpRenderValue == "Manage")
        {
            var element = document.getElementById('add-new-slabs');
            element.classList.remove('translate-x-full');
        }
    });

    function ManageCommissionDetail(i, j, k, l) {
        window.location.href = '/CommissionManagement/ManageCommissionDetail?id=' + i + "&&CategoryId=" + j + "&&CategoryName=" + k + "&&AdminCommissionTypeId=" + l;
    }

    const handleCommissionDelete = (categoryId, categoryDetailId, categoryName, AdminCommissionTypeId) => {
        const url = `/CommissionManagement/DeleteCommissionDetail?CategoryId=${encodeURIComponent(categoryId)}&CategoryDetailId=${encodeURIComponent(categoryDetailId)}&CategoryName=${encodeURIComponent(categoryName)}&AdminCommissionTypeId=${encodeURIComponent(AdminCommissionTypeId)}`;
        window.location.href = url;
    }

    const handleCancelClick = () => {
        location.reload();
    }
</script>