@section scripts
{

    <script>
        $(document).ready(function () {
        var PopUpRenderValue = '@ViewBag.PopUpRenderValue';
         if (PopUpRenderValue != null && PopUpRenderValue != "" && PopUpRenderValue == "Manage") {
             var element = document.getElementById('add-new-charge-category');
        element.classList.remove('translate-x-full');
        }
        });
        function addQueryParam2(url, paramName, paramValue, paramName2, paramValue2) {
            if (paramValue != null && paramValue != "") {
                url += url.includes('?') ? `&${paramName}=${paramValue}` : `?${paramName}=${paramValue}`;
            }
            if (paramValue2 != null && paramValue2 != "") {
                url += url.includes('?') ? `&${paramName2}=${paramValue2}` : `?${paramName2}=${paramValue2}`;
            }
            return url;
        }

        function openDeleteModal(i, j, k) {
            const modalTarget = document.querySelector("[data-modal-target='delete-club-confirmation']");
            const modal = document.getElementById("delete-club-confirmation");
            modal.classList.remove("hidden");
            $('#delete_club_id').attr('data-val1', i);
            $('#delete_club_id').attr('data-val2', j);
            $('#delete_club_id').attr('data-val3', k);
            modal.setAttribute("aria-hidden", "false");
        }


          function openBlockEventModal(i,j,k) {
           const modalTarget = document.querySelector("[data-modal-target='block-confirmation']");
           const modal = document.getElementById("block-confirmation");
           modal.classList.remove("hidden");
              $('#block_id').attr('data-val1', i);
              $('#block_id').attr('data-val2', j);
              $('#block_id').attr('data-val3', k);
           modal.setAttribute("aria-hidden", "false");
          }
        function openUnBlockEventModal(i, j, k) {
          const modalTarget = document.querySelector("[data-modal-target='unblock-confirmation']");
           const modal = document.getElementById("unblock-confirmation");
           modal.classList.remove("hidden");
            $('#unblock_id').attr('data-val1', i);
            $('#unblock_id').attr('data-val2', j);
            $('#unblock_id').attr('data-val3', k);
           modal.setAttribute("aria-hidden", "false");
          }
        function BlockEvent() {
            const i = $('#block_id').attr('data-val1');
            const j = $('#block_id').attr('data-val2');
            const k = $('#block_id').attr('data-val3');
            window.location.href = '/ChargeManagement/ManageChargeStatus?agentTypeValue=' + i + '&categoryId=' + j+ '&status=' + k;
        }

        function UnBlockEvent() {
            const i = $('#unblock_id').attr('data-val1');
            const j = $('#unblock_id').attr('data-val2');
            const k = $('#unblock_id').attr('data-val3');
          window.location.href = '/ChargeManagement/ManageChargeStatus?agentTypeValue=' + i + '&categoryId=' + j+ '&status=' + k;
          }
        document.addEventListener('DOMContentLoaded', function () {
            const page_size = @ViewBag.PageSize;
            const total_data = @ViewBag.TotalData;
            const start_index_val = @ViewBag.StartIndex;
            let URL = "/ChargeManagement/ChargeCategoryType" ;
            let search_filter = $('#default-search').val();
            URL = addQueryParam2(URL, 'SearchFilter', search_filter,"agentTypeValue","@Model.agentTypeValue");
            LoadPagination(page_size, total_data, start_index_val, URL);

        });
         function EditCategory(i, j) {
             window.location.href = '/ChargeManagement/ManageChargeCategory?agentTypeValue=' + i + '&categoryId=' + j;;
        }
        function DeleteFunction() {
            const i = $('#delete_club_id').attr('data-val1');
            const j = $('#delete_club_id').attr('data-val2');
            const k = $('#delete_club_id').attr('data-val3');
          window.location.href = '/ChargeManagement/ManageChargeStatus?agentTypeValue=' + i + '&categoryId=' + j+ '&status=' + k;
        }
        function ManageStatus(i, j,k) {
            window.location.href = '/ChargeManagement/ManageChargeStatus?agentTypeValue=' + i + '&categoryId=' + j+ '&status=' + k;
        }
        function ViewCategory(i,j, k) {
            window.location.href = '/ChargeManagement/ChargeCategoryDetails?agentTypeValue=' + i+ '&categoryId=' + j + '&categoryName=' + k;
        }
        function CancelFunction() {
            location.reload();
        }
    </script>
}