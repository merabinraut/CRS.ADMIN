                                                            {
                                                                <div onclick="openBlockEventModal('@item.categoryId','@item.categoryDetailId','@Model.categoryName','S')" data-modal-target="block-category-confirmation" data-modal-toggle="block-category-confirmation">
                                                                    <i class="las la-ban text-[20px] cursor-pointer text-[#CB3F3F]"></i>
                                                                </div>
                                                               
                                                            }
                                                            else if (!string.IsNullOrEmpty(@item.status) && item.status.Trim().ToUpper() == "S")
                                                            {
                                                                <div onclick="openUnBlockEventModal('@item.categoryId','@item.categoryDetailId','@Model.categoryName','A')" data-modal-target="unblock-confirmation" data-modal-toggle="unblock-confirmation">
                                                                    <i class="las la-ban text-[20px] cursor-pointer text-[#A6A6A6]"></i>
                                                                </div>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                SN++;
                                            }
                                        }

                                    }
                                </tbody>
                            </table>

                        </div>
                        <div class="pagination-club">
                            <div class="show-entry" id="Entries-Id">
                            </div>
                            <div class="flex gap-[12px]">
                                <div class="btn btn-secondary-box-shadow" id="prev-btn">
