             var element = document.getElementById('add-new-charge-category-slab');
        element.classList.remove('translate-x-full');
        }
        });
        function addQueryParam2(url, paramName, paramValue, paramName2, paramValue2) {
            if (paramValue != null && paramValue != "") {
                url += url.includes('?') ? `&${paramName}=${paramValue}` : `?${paramName}=${paramValue}`;
            }
            if (paramValue2 != null && paramValue2 != "") {
                url += url.includes('?') ? `&${paramName2}=${paramValue2}` : `?${paramName2}=${paramValue2}`;
            }
            return url;
        }
        function openDeleteModal(i, j, k,l) {
            const modalTarget = document.querySelector("[data-modal-target='delete-category-confirmation']");
            const modal = document.getElementById("delete-category-confirmation");
            modal.classList.remove("hidden");
            $('#delete_category_id').attr('data-val1', i);
            $('#delete_category_id').attr('data-val2', j);
            $('#delete_category_id').attr('data-val3', k);
            $('#delete_category_id').attr('data-val4', l);
            modal.setAttribute("aria-hidden", "false");
        }
        function openBlockEventModal(i, j, k,l) {
            const modalTarget = document.querySelector("[data-modal-target='block-category-confirmation']");
            const modal = document.getElementById("block-category-confirmation");
            modal.classList.remove("hidden");
            $('#block_id').attr('data-val1', i);
            $('#block_id').attr('data-val2', j);
            $('#block_id').attr('data-val3', k);
            $('#block_id').attr('data-val4', l);
            modal.setAttribute("aria-hidden", "false");
        }
        function openUnBlockEventModal(i, j, k,l) {
            const modalTarget = document.querySelector("[data-modal-target='unblock-category-confirmation']");
            const modal = document.getElementById("unblock-category-confirmation");
            modal.classList.remove("hidden");
            $('#unblock_id').attr('data-val1', i);
            $('#unblock_id').attr('data-val2', j);
            $('#unblock_id').attr('data-val3', k);
            $('#unblock_id').attr('data-val4', l);
            modal.setAttribute("aria-hidden", "false");
        }
        function BlockEvent() {
            const i = $('#block_id').attr('data-val1');
            const j = $('#block_id').attr('data-val2');
            const k = $('#block_id').attr('data-val3');
            const l = $('#block_id').attr('data-val4');
            ManageStatus(i, j, k, l);
        }

        function UnBlockEvent() {
            const i = $('#unblock_id').attr('data-val1');
            const j = $('#unblock_id').attr('data-val2');
            const k = $('#unblock_id').attr('data-val3');
            const l = $('#unblock_id').attr('data-val4');
            ManageStatus(i, j, k, l);
        }

        function DeleteFunction() {
            const i = $('#delete_category_id').attr('data-val1');
            const j = $('#delete_category_id').attr('data-val2');
            const k = $('#delete_category_id').attr('data-val3');
            const l = $('#delete_category_id').attr('data-val4');
            ManageStatus(i, j, k, l);
        }

        document.addEventListener('DOMContentLoaded', function () {
            const page_size = @ViewBag.PageSize;
            const total_data = @ViewBag.TotalData;
            const start_index_val = @ViewBag.StartIndex;
            let URL = "/ChargeManagement/ChargeCategoryDetails" ;
            let search_filter = $('#default-search').val();
            URL = addQueryParam2(URL, 'SearchFilter', search_filter, "agentTypeValue", "@Model.agentTypeValue");
            URL = addQueryParam(URL, 'categoryId', "@Model.categoryId");
            URL = addQueryParam(URL, 'categoryName', "@Model.categoryName");
            LoadPagination(page_size, total_data, start_index_val, URL);

        });
         function EditCategory(i, j,k) {
             window.location.href = '/ChargeManagement/ManageChargeCategoryDetails?agentTypeValue=' + "@Model.agentTypeValue" +'&categoryId=' + i + '&categoryDetailId=' + j + '&categoryName=' + k;
        }
        function ManageStatus(i, j,k,l) {
            window.location.href = '/ChargeManagement/ManageChargeDetailStatus?agentTypeValue=' + "@Model.agentTypeValue" + '&categoryId=' + i + '&categoryDetailId=' + j + '&categoryName=' + k + '&status=' + l;
        }

        function CancelFunction() {
            location.reload();
        }
