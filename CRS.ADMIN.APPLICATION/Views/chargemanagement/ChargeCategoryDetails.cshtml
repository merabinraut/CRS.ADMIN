                                    @{
                                        if (Model.ChargeCategoryDetailsList.Count > 0)
                                        {
                                            int SN = 1;
                                            foreach (var item in Model.ChargeCategoryDetailsList)
                                            {
                                                <tr class="bg-white border-b ">
                                                    <td class="p-[12px]">
                                                        @item.SNO
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.fromAmount
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.toAmount
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.chargeType
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.chargeValue
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.minChargeValue
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @item.maxChargeValue
                                                    </td>
                                                    <td class="p-[12px]">
                                                        @if (!string.IsNullOrEmpty(item.status) && item.status.Trim().ToUpper() == "A")
                                                        {
                                                            <div class="approved">
                                                                Active
                                                            </div>
                                                        }
                                                        else if (!string.IsNullOrEmpty(item.status) && item.status.Trim().ToUpper() == "S")
                                                        {
                                                            <div class="blocked">
                                                                Suspended
                                                            </div>
                                                        }
                                                    </td>
                                                    <td class="p-[12px]">
                                                        <div class="flex gap-[7px]">

                                                            <i class="las la-edit text-[20px] cursor-pointer text-[#A6A6A6]" onclick="EditCategory('@item.categoryId','@item.categoryDetailId','@Model.categoryName');"></i>
                                                            <i class=" las la-trash-alt text-[20px] cursor-pointer text-[#CB3F3F]" onclick="openDeleteModal('@item.categoryId','@item.categoryDetailId','@Model.categoryName','D');" data-modal-target="delete-category-confirmation" data-modal-toggle="delete-category-confirmation"></i>
