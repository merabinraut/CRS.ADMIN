@model CRS.ADMIN.APPLICATION.Models.ChargeManagement.ManageChargeCategoryModel
<div id="add-new-charge-category"
     class="drawer-close-disable  flex justify-end fixed top-0 right-0 z-40 h-screen overflow-y-auto transition-transform translate-x-full"
     tabindex="-1" aria-labelledby="add-new-charge-category" aria-modal="true" role="dialog">
    <div class="bg-white w-[616px] drawer-container relative">
        <div class="drawer-form-container sticky top-0 z-[5] ">
            <div class="drawer-form flex justify-between bg-secondary-color-pink py-[16px] px-[24px] h-[56px]">
                <div>
                    @CRS.ADMIN.APPLICATION.Resources.Resource.Manage_Charge_Category
                </div>
                <button type="button" data-drawer-hide="add-new-charge-category" aria-controls="add-new-charge-category"
                        class="text-[20px]">
                    <i class="las la-window-close text-white" onclick="CancelFunction()"></i>
                </button>
            </div>
        </div>
        <div class="p-[24px]">
            @using (Html.BeginForm("ManageChargeCategory", "ChargeManagement", FormMethod.Post, new { @id = "ManageChargeCategoryForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.agentTypeValue);
                @Html.HiddenFor(model => model.categoryId);
                <div class="grid gap-4">
                    <div class="input-field-common mb-[20px]" id="">
                        <div class="input-field-common">
                            <label for="date" class="block mb-[12px] text-sm font-medium text-secondary-100 ">
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Category_Name
                            </label>
                            @Html.TextBoxFor(model => model.categoryName, new
                           {
                           @class = "w-full",
                           @placeholder = @CRS.ADMIN.APPLICATION.Resources.Resource.Category_Name,
                           @autocomplete = "off",
                           @type = "text"
                          })
                            <span class="error">
                                @Html.ValidationMessageFor(m => m.categoryName)
                            </span>
                        </div>
                    </div>
                    <div class="input-field-common mb-[20px]" id="">
                        <div class="input-field-common">
                            <label for="date" class="block mb-[12px] text-sm font-medium text-secondary-100 ">
                                @CRS.ADMIN.APPLICATION.Resources.Resource.Category_Description
                            </label>
                            @Html.TextAreaFor(model => model.description, new
                                {
                                @class = "w-full",
                                @placeholder = @CRS.ADMIN.APPLICATION.Resources.Resource.Category_Description,
                                autocomplete = "off"
                                })
                            <span class="error">
                                @Html.ValidationMessageFor(m => m.description)
                            </span>

                        </div>
                    </div>
                </div>

                <!-- for submit button -->
                <div class="py-4 flex justify-end">
                    <div class="flex gap-6">
                        <button class="btn btn-secondary rounded-[4px]" type="button" data-drawer-hide="add-new-host-tag"
                                aria-controls="add-new-host-tag" onclick="CancelFunction();">
                            @CRS.ADMIN.APPLICATION.Resources.Resource.Cancel
                        </button>
                        <button class="btn btn-primary-default rounded-[4px]" type="submit"> @CRS.ADMIN.APPLICATION.Resources.Resource.Submit</button>


                    </div>

                </div>

            }
        </div>
    </div>
</div>